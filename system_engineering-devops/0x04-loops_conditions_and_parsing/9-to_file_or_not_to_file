#!/usr/bin/env bash
# This script checks the existence, emptiness, and type of a file named school

# Check for existence
if [ -e school ]
then
    echo "school file exists"

    # Check for emptiness (only if it exists)
    if [ -s school ] # -s checks if file has a size greater than zero (i.e., not empty)
    then
        echo "school file is not empty"
    else
        echo "school file is empty"
    fi

    # Check if it's a regular file (only if it exists)
    if [ -f school ]
    then
        echo "school is a regular file"
    fi

else
    echo "school file does not exist"
fi
